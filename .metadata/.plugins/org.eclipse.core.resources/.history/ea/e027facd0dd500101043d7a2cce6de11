<!-- Manual Dropdown JavaScript -->
<script>
// Toggle manual dropdown
function toggleManualDropdown(menuId) {
    var menu = document.getElementById(menuId);
    if (!menu) return;
    
    // Toggle current menu
    if (menu.classList.contains('show')) {
        menu.classList.remove('show');
    } else {
        // Close all other dropdowns
        closeAllDropdowns();
        // Show current dropdown
        menu.classList.add('show');
    }
}

// Close all dropdowns
function closeAllDropdowns() {
    document.querySelectorAll('.manual-dropdown-menu').forEach(function(menu) {
        menu.classList.remove('show');
    });
}

// Close dropdown when clicking outside
document.addEventListener('click', function(event) {
    // Check if clicked inside a dropdown
    if (!event.target.closest('.account-dropdown') && 
        !event.target.closest('.dropdown')) {
        closeAllDropdowns();
    }
});

// Close dropdown when clicking on dropdown item
document.querySelectorAll('.dropdown-item').forEach(function(item) {
    item.addEventListener('click', function() {
        // Optional: Add delay before closing if needed
        setTimeout(closeAllDropdowns, 100);
    });
});

// Close dropdown on escape key
document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
        closeAllDropdowns();
    }
});

// Initialize - close all dropdowns on page load
window.addEventListener('load', function() {
    closeAllDropdowns();
});
</script>

<!-- Bootstrap JS (for other components if needed) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

