    <script>
    // ========== CREATE ANIMATED FRUITS ==========
    function createFloatingFruits() {
        const fruitContainer = document.getElementById('floatingFruits');
        const fruits = ['apple', 'orange', 'banana', 'kiwi', 'berry', 'grape', 'watermelon'];
        const fruitIcons = ['üçé', 'üçä', 'üçå', 'ü•ù', 'üçì', 'üçá', 'üçâ'];
        
        // Clear existing fruits
        fruitContainer.innerHTML = '';
        
        // Create 15 floating fruits
        for (let i = 0; i < 15; i++) {
            const fruit = document.createElement('div');
            const randomFruit = Math.floor(Math.random() * fruits.length);
            
            fruit.className = `fruit ${fruits[randomFruit]}`;
            fruit.innerHTML = fruitIcons[randomFruit];
            
            // Random position
            const left = Math.random() * 100;
            const top = Math.random() * 100;
            const duration = 20 + Math.random() * 30;
            const delay = Math.random() * 5;
            
            fruit.style.left = `${left}%`;
            fruit.style.top = `${top}%`;
            fruit.style.animationDuration = `${duration}s`;
            fruit.style.animationDelay = `${delay}s`;
            
            // Add bounce effect on hover
            fruit.addEventListener('mouseenter', function() {
                this.style.animation = 'bounce 0.5s ease';
                this.style.transform = 'scale(1.3)';
            });
            
            fruit.addEventListener('mouseleave', function() {
                this.style.animation = '';
                this.style.transform = '';
            });
            
            fruitContainer.appendChild(fruit);
        }
    }
    
    // ========== TEXT FADE-IN ANIMATION ==========
    function animateTextFadeIn() {
        const elements = document.querySelectorAll('.fresh-content h1, .fresh-content p, .fresh-btn, .section-title');
        elements.forEach((el, index) => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                el.style.transition = 'all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            }, index * 200);
        });
    }
    
    // ========== INITIALIZE ANIMATIONS ==========
    document.addEventListener('DOMContentLoaded', function() {
        createFloatingFruits();
        animateTextFadeIn();
        
        // Add hover effects to all cards
        const cards = document.querySelectorAll('.offer-card, .category-card, .product-card-grid');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.zIndex = '100';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.zIndex = '';
            });
        });
        
        // Initialize mobile cart functions
        if (typeof mobileAddToCart !== 'undefined') {
            // Keep existing mobile functionality
        }
    });
    
    // ========== RESPONSIVE FRUIT ADJUSTMENTS ==========
    window.addEventListener('resize', function() {
        createFloatingFruits();
    });
    
    // ========== ADDITIONAL FRUIT ANIMATIONS ==========
    function fruitRain() {
        const container = document.getElementById('floatingFruits');
        const fruit = document.createElement('div');
        const fruits = ['üçé', 'üçä', 'üçå', 'ü•ù', 'üçì', 'üçá', 'üçâ'];
        const randomFruit = fruits[Math.floor(Math.random() * fruits.length)];
        
        fruit.innerHTML = randomFruit;
        fruit.style.cssText = `
            position: fixed;
            top: -50px;
            left: ${Math.random() * 100}%;
            font-size: 2rem;
            animation: fruitDrop 3s linear forwards;
            pointer-events: none;
            z-index: 1000;
        `;
        
        container.appendChild(fruit);
        
        setTimeout(() => {
            fruit.remove();
        }, 3000);
    }
    
    // Add CSS for fruit rain
    const style = document.createElement('style');
    style.textContent = `
        @keyframes fruitDrop {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 1;
            }
            100% {
                transform: translateY(100vh) rotate(360deg);
                opacity: 0;
            }
        }
    `;
    document.head.appendChild(style);
    
    // Random fruit rain every 5 seconds
    setInterval(fruitRain, 5000);
    
    // ========== KEEP EXISTING MOBILE FUNCTIONALITY ==========
    // Your existing mobileAddToCart, mobileChangeQty, etc. functions will continue to work
    // They're already included in your original code
    </script>
</body>
</html>